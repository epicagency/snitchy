{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@commitlint/config-conventional": "^7.1.2",
    "@commitlint/config-lerna-scopes": "^7.1.2",
    "babel-eslint": "^9.0.0",
    "commitizen": "^2.10.1",
    "cz-ccgls": "^0.1.1",
    "eslint": "^5.5.0",
    "husky": "^1.0.0-rc.13",
    "inquirer": "^5.2.0",
    "lerna": "^3.3.0",
    "lint-staged": "^7.2.2"
  },
  "scripts": {
    "commit": "npx git-cz || exit 0",
    "commit-retry": "npx git-cz --retry || exit 0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lerna run --concurrency 1 --stream precommit -- --silent"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-ccgls"
    }
  }
}
