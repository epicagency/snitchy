    "@babel/plugin-transform-modules-commonjs": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@commitlint/config-conventional": "^7.1.2",
    "@commitlint/config-lerna-scopes": "^7.1.2",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.2",
    "commitizen": "3.0.2",
    "cpx": "^1.5.0",
    "cross-env": "^5.2.0",
    "cz-ccgls": "0.2.0",
    "eslint": "^5.5.0",
    "husky": "^1.0.0-rc.13",
    "inquirer": "^5.2.0",
    "jest": "^23.6.0",
    "lerna": "^3.3.0",
    "lerna-alias": "^3.0.2",
    "lint-staged": "^7.2.2",
    "npm-run-all": "^4.1.3",
